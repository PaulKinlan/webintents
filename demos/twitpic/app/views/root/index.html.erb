<% content_for(:js) do %>
  <intent
    type="image/*"
    action="http://webintents.org/save"
    href="save"/>
  <script type="text/javascript">
    $(function() {
      attachPickListener(
        $('#choose'), $('#step1'), $('#step2'), $('#result_div'), $('#result'))
    });
  </script>
<% end %>

<h1>Demo: Upload to Somewhere</h1>
<div id='step1'>
  <h3>First, pick an image</h3>
  <input type="button" value="Choose Image" id="choose"/>
</div>

<div id='step2' style='display:none'>
  <h3>Now, save the image</h3>
</div>

<div id='result_div' style='display:none'>
  <h3>Result</h3>
  <img src='' id='result'/>
</div>

<%= form_tag logout_path, :method => :delete do %>
  <%= submit_tag 'Sign out' %>
<% end %>
